{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wikki",
  "version": "0.2.0",
  "identifier": "com.wikki.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "Wikki Chat",
        "width": 400,
        "height": 550,
        "minWidth": 350,
        "minHeight": 400,
        "transparent": true,
        "decorations": false,
        "visible": false,
        "center": true
      },
      {
        "label": "avatar",
        "url": "avatar.html",
        "title": "Wikki",
        "width": 90,
        "height": 240,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": true,
        "skipTaskbar": true,
        "shadow": false,
        "x": 1700,
        "y": 200
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
