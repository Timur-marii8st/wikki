{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wikki",
  "version": "0.1.0",
  "identifier": "com.wikki.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "Wikki",
        "width": 350,
        "height": 360,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "fullscreen": false
      },
      {
        "label": "assistant",
        "url": "assistant.html",
        "title": "Assistant",
        "width": 100,
        "height": 100,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": true,
        "visible": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
